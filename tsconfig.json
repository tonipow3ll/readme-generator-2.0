{
    "compilerOptions": {
      "lib": ["es6", "dom"],  
       "target": "es6",
       "module": "CommonJS",
       "moduleResolution": "node",
       "outDir": "dist",
       "resolveJsonModule": true,
       "emitDecoratorMetadata": true,
       "esModuleInterop": true,
       "experimentalDecorators": true,
       "sourceMap": true,
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
 }